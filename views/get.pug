doctype
html
    h1 RSVP
    form(method='POST' action='/rsvp' id='rsvpform')
        div
            label(for='name') Name:
            input(type='text' id='name' name='name' )
        div
            label(for='email') Email:
            input(type='text' id='email' name='email')
        div
            label(for='attending')
            input(type='radio' name='attending' value='true')
            I will be going
            input(type='radio' name='attending' value='false')
            I will not be going
        div
            label(for='guestnumber') Number of Guests
            input(list='guestnumber' name='guestnumber')
            datalist(id='guestnumber')
                option(value=0)
                option(value=1)
                option(value=2)
                option(value=3)
                option(value=4)
                option(value=5)
                option(value=6)
                option(value=7)
                option(value=8)
        button(type='submit' id='uploadButton') RSVP!